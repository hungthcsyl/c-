#include <bits/stdc++.h>
#define ll long long
using namespace std;
ll res,binhs,k,m,kt=0,ans,ma,i,j,dp[1001][1001],x,y,t,temp,sum,n,a[10000001],b[1000001],r[1000001],i2;
deque<int>dq;
vector<int>v;
int main(){
    ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    cin>>n>>k;
    for (i=1; i<=n; i++) {
        cin>>a[i];
        while (!dq.empty() && a[dq.back()]>=a[i])
            dq.pop_back();
        while (!dq.empty() && dq.front()<i-k+1)
            dq.pop_front();
        dq.push_back(i);
        if (i>=k)
           b[i]=a[dq.front()];
    }
    j=1;
    for(i=1; i<k; i++)
        b[i]=b[k];
    for(i=1; i<=n; i++)
        ans+=a[i]-b[i];
    cout<<ans;
    return 0;
}
