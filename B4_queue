#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define fi first
#define se second
ll n,k,a[1000001],ans[1000001],fans=0;
deque<int>dq;
int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
cin>>n>>k;
for(int i=1;i<=n;i++){
    cin>>a[i];
    while(!dq.empty()&&a[dq.back()]>=a[i])
        dq.pop_back();
    dq.push_back(i);
    if(i>=k)
        ans[i-k+1]=a[dq.front()];
    if(dq.front()==i-k+1) dq.pop_front();
}
dq.clear();
for(int i=1;i<=n;i++){
    while(!dq.empty()&&ans[dq.back()]<=ans[i])
        dq.pop_back();
    dq.push_back(i);
  fans+=a[i]-ans[dq.front()];
   if(dq.front()==i-k+1) dq.pop_front();
}
cout<<fans;
    return 0;
}
